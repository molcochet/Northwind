{
    "family": "__ECS_TASK__",
    "networkMode": "host",
    "containerDefinitions": [
        {
            "image": "__AWS_ECS_REPO_DOMAIN__/__IMAGE_NAME__:__IMAGE_VERSION__",
            "name": "__IMAGE_NAME__-container",
            "cpu": 128,
            "memory": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 5000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "VIRTUAL_HOST",
                    "value": "northwind.layoric.org"
                },
                {
                    "name": "VIRTUAL_PORT",
                    "value": "5001"
                }
            ]
        }
    ]
}